    <thead>
        <tr>
            <th>Abreviatura</th>
            <th>Nombre de la categoria</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in categoryList)
        {
        <tr>
            <td>@category.CategoryId</td>
            <td>@category.CategoryName</td>
